<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:layout_width="500dp"
        android:layout_height="900dp"
        android:background="@drawable/blue_backgroung_squiggle"
        android:rotation="-12"
        android:rotationY="01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="600dp"
        android:layout_height="1200dp"
        android:background="@drawable/red_background_squiggle"
        android:rotation="-20"
        android:rotationX="0"
        android:rotationY="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </androidx.appcompat.widget.Toolbar>


    <View
        android:id="@+id/awards_pic"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_award"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nova_square"
        android:text="@string/achievements"
        android:textFontWeight="1000"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/awards_pic" />

    <ScrollView
        android:layout_width="310dp"
        android:layout_height="350dp"
        android:layout_marginTop="20dp"
        android:background="#C0FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView27">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/trophy_1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/trophy"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="8dp"
                android:fontFamily="@font/nova_square"
                android:maxWidth="200dp"
                android:text="Bending Over Backwards"
                android:textColor="#0097a7"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/trophy_1"
                app:layout_constraintTop_toTopOf="@id/trophy_1" />

            <TextView
                android:id="@+id/textView_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/nova_square"
                android:text="LVL. 2"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/textView_1"
                app:layout_constraintTop_toBottomOf="@id/textView_1" />

            <TextView
                android:id="@+id/textView_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_extralight"
                android:maxWidth="200dp"
                android:text="Rewarded for successful completion of 2 weeks of yoga"
                app:layout_constraintStart_toStartOf="@id/textView_1"
                app:layout_constraintTop_toBottomOf="@id/textView_2" />

            <ImageView
                android:id="@+id/trophy_2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/trophy"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/trophy_1" />


            <TextView
                android:id="@+id/textView_2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="8dp"
                android:fontFamily="@font/nova_square"
                android:maxWidth="200dp"
                android:text="The Abdominable Snowman"
                android:textColor="#0097a7"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/trophy_2"
                app:layout_constraintTop_toTopOf="@id/trophy_2" />

            <TextView
                android:id="@+id/textView_2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/nova_square"
                android:text="LVL. 1"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/textView_2_1"
                app:layout_constraintTop_toBottomOf="@id/textView_2_1" />

            <TextView
                android:id="@+id/textView_2_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_extralight"
                android:maxWidth="200dp"
                android:text="Rewarded for successful completion of 500 situps in a week. "
                app:layout_constraintStart_toStartOf="@id/textView_2_1"
                app:layout_constraintTop_toBottomOf="@id/textView_2_2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>