<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:layout_width="600dp"
        android:layout_height="1200dp"
        android:background="@drawable/red_background_squiggle"
        android:rotation="-20"
        android:rotationX="0"
        android:rotationY="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="500dp"
        android:layout_height="900dp"
        android:background="@drawable/blue_backgroung_squiggle"
        android:rotation="-12"
        android:rotationY="01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/nova_square"
        android:text="@string/settings"
        android:textFontWeight="1000"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="310dp"
        android:layout_height="450dp"
        android:layout_marginTop="20dp"
        android:background="#C0FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_sans"
                android:text="Account"
                android:textColor="#0097a7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/user_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_user"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Account" />

            <TextView
                android:id="@+id/EditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/nunito_sans"
                android:text="Edit Profile"
                app:layout_constraintBottom_toBottomOf="@id/user_icon"
                app:layout_constraintStart_toEndOf="@id/user_icon"
                app:layout_constraintTop_toTopOf="@id/user_icon" />

            <View
                android:id="@+id/arrow_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_chevron_right"
                app:layout_constraintBottom_toBottomOf="@id/user_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/user_icon" />


            <View
                android:id="@+id/lock_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_lock"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_icon" />


            <TextView
                android:id="@+id/ChangePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="25dp"
                android:fontFamily="@font/nunito_sans"
                android:text="Change Password"

                app:layout_constraintBottom_toBottomOf="@id/lock_icon"
                app:layout_constraintStart_toEndOf="@id/lock_icon"
                app:layout_constraintTop_toTopOf="@id/lock_icon" />

            <View
                android:id="@+id/arrow_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_chevron_right"
                app:layout_constraintBottom_toBottomOf="@id/lock_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/lock_icon" />


            <View
                android:id="@+id/phone_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lock_icon" />

            <TextView
                android:id="@+id/ContactUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/nunito_sans"
                android:text="Contact Us"
                app:layout_constraintBottom_toBottomOf="@id/phone_icon"
                app:layout_constraintStart_toEndOf="@id/phone_icon"
                app:layout_constraintTop_toTopOf="@id/phone_icon" />

            <View
                android:id="@+id/arrow_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_chevron_right"
                app:layout_constraintBottom_toBottomOf="@id/phone_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/phone_icon" />

            <View
                android:id="@+id/logout_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_log_out"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phone_icon" />

            <TextView
                android:id="@+id/Logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/nunito_sans"
                android:text="Logout"
                app:layout_constraintBottom_toBottomOf="@id/logout_icon"
                app:layout_constraintStart_toEndOf="@id/logout_icon"
                app:layout_constraintTop_toTopOf="@id/logout_icon" />

            <View
                android:id="@+id/arrow_4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_chevron_right"
                app:layout_constraintBottom_toBottomOf="@id/logout_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/logout_icon" />

            <TextView
                android:id="@+id/Preferences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"

                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_sans"
                android:text="Preferences"
                android:textColor="#0097a7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/logout_icon" />


            <View
                android:id="@+id/display_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_sun"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Preferences" />

            <TextView
                android:id="@+id/DisplaySettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/nunito_sans"
                android:text="Display Settings"
                app:layout_constraintBottom_toBottomOf="@id/display_icon"
                app:layout_constraintStart_toEndOf="@id/display_icon"
                app:layout_constraintTop_toTopOf="@id/display_icon" />

            <View
                android:id="@+id/arrow_5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_chevron_right"
                app:layout_constraintBottom_toBottomOf="@id/display_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/display_icon" />


            <View
                android:id="@+id/notifications_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_send"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/display_icon" />

            <TextView
                android:id="@+id/Notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/nunito_sans"
                android:text="Notifications"
                app:layout_constraintBottom_toBottomOf="@id/notifications_icon"
                app:layout_constraintStart_toEndOf="@id/notifications_icon"
                app:layout_constraintTop_toTopOf="@id/notifications_icon" />

            <View
                android:id="@+id/arrow_6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_chevron_right"
                app:layout_constraintBottom_toBottomOf="@id/notifications_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/notifications_icon" />


            <View
                android:id="@+id/Language_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_message_circle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/notifications_icon" />

            <TextView
                android:id="@+id/Language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/nunito_sans"
                android:text="Language"
                app:layout_constraintBottom_toBottomOf="@id/Language_icon"
                app:layout_constraintStart_toEndOf="@id/Language_icon"
                app:layout_constraintTop_toTopOf="@id/Language_icon" />

            <View
                android:id="@+id/arrow_7"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_chevron_right"
                app:layout_constraintBottom_toBottomOf="@id/Language_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/Language_icon" />

            <TextView
                android:id="@+id/ConnectSocialMedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"

                android:fontFamily="@font/nunito_sans"
                android:text="Connect Social Media"
                android:textColor="#0097a7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Language_icon" />

            <View
                android:id="@+id/facebook_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"

                android:layout_marginTop="10dp"
                android:background="@drawable/ic_facebook"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ConnectSocialMedia" />

            <View
                android:id="@+id/linkedin_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="38dp"

                android:background="@drawable/ic_linkedin"
                app:layout_constraintStart_toEndOf="@id/facebook_icon"
                app:layout_constraintTop_toTopOf="@id/facebook_icon" />

            <View
                android:id="@+id/youtube_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="38dp"

                android:background="@drawable/ic_youtube"
                app:layout_constraintStart_toEndOf="@id/linkedin_icon"
                app:layout_constraintTop_toTopOf="@id/facebook_icon" />

            <View
                android:id="@+id/instagram_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="38dp"

                android:background="@drawable/ic_instagram"
                app:layout_constraintStart_toEndOf="@id/youtube_icon"
                app:layout_constraintTop_toTopOf="@id/facebook_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>